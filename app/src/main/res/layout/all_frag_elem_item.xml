<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:padding="10dp"
        android:paddingBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white">
                <ImageView
                    android:tag="coverPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:tag="titleTxV"
                android:textSize="20sp"
                android:hint="Title of the Card"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="7dp"
                layout="@layout/custom_separator" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:tag="descriptionContentOfCD"
                android:paddingTop="15dp"
                android:textSize="18sp"
                android:hint="Here should be a description of the content of news about the restaurants or the application"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/custom_button" />
            </FrameLayout>
        </LinearLayout>

</android.support.v7.widget.CardView>