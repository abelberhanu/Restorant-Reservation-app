<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.CreateNewRestaurantStep1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Menu (OPTIONAL)"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/titleFrag"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="6dp"
        layout="@layout/custom_separator" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuItemFL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:tag="menuItemLL"
            android:layout_gravity="center">
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newSectionBtn"
        android:text="New Section"/>

</LinearLayout>
