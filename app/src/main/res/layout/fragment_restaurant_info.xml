<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.RestaurantInfoFragment"
    android:paddingTop="3dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/coverPictureImageView"
            android:scaleType="centerCrop"
            android:src="#b07070" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center">

                <ImageButton
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/btnLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_like_selector"
                    android:layout_margin="0dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/restaurantProAddressTxV"
                android:background="@drawable/round_corner_txv"
                android:gravity="left|center"
                android:freezesText="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/layout_shape"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="5"
            android:layout_margin="3dp"
            android:id="@+id/restaurantProDetailLiL"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1.65"
                android:id="@+id/ratingPicFrL">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/restaurantRatingPicIV"
                    android:src="@drawable/ic_local_dining_black_24dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black_overlay"
                android:layout_margin="2dp"
                android:layout_weight="0.0025">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="1.65">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/restaurantProPhoneTxV"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:freezesText="true"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/black_overlay"
                android:layout_margin="2dp"
                android:layout_weight="0.0025">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.65">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="9h00 - 20h"
                    android:id="@+id/restaurantProOpHoursTxV"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/restaurantProDescriptionTxV"
            android:background="@drawable/round_corner_txv"
            android:gravity="left"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:freezesText="true"/>

    </LinearLayout>

</FrameLayout>
